<?xml version="1.0"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">

<!-- GDM Theme: OSX4Lin GDM v1.0 RC2 -->

<greeter>

	<!-- background basecolor -->
	<item type="rect">
		<pos x="0" y="0" width="100%" height="100%"/>
		<normal color="#aaaaaa"/>
	</item>


	<!-- Background-->
	<item type="svg">
		<normal file="background.jpg"/>
		<pos x="0" y="0" width="100%" height="100%"/>
	</item>


	<!-- login window container -->
	<item type="rect">
		<pos anchor="center" x="50%" y="50%" width="550" height="462"/>
		<fixed>


			<!-- login window pixmap -->
			<item type="pixmap">
				<normal file="window_shadow.png"/>
				<pos anchor="center" x="50%" y="50%"/>
			</item>
	

			<!-- Linux & hostname container -->
			<item type="rect">
				<pos anchor="n" x="50%" y="145"/>
				<normal color="#ff0000"/>
				
				<box orientation="vertical">
				
					<!-- Linux label -->
					<item type="label">
						<pos anchor="n" x="50%"/>
						<normal color="#000000" font="Lucida Grande 20"/>
						<text>%h</text>
					</item>
			
				</box>
			</item>


			<!-- CAPS-LOCK warning -->
			<item type="label" id="caps-lock-warning">
				<pos anchor="n" x="50%" y="290"/>
				<normal font="Lucida Grande 9 Bold" color="#ffffff"/>
				<stock type="caps-lock-warning"/>
			</item>

			
			<!-- username/password label & entry container -->
			<item type="rect">
				<pos anchor="n" x="50%" y="250" height="box" width="box"/>

				<box orientation="horizontal" spacing="57">

					<!-- username/password label -->
					<item type="label" id="pam-prompt">
						<stock type="username-label"/>
						<normal color="#000000" font="Lucida Grande 10 Bold"/>
					</item>

					<!-- username/password entry -->
					<item type="entry" id="user-pw-entry">
						<normal color="#000000" font="Lucida Grande 10"/>
						<pos width="100" height="20"/>
					</item>
				</box>
			</item>


			<!-- error messages -->
			<item type="label" id="pam-error">
				<pos anchor="n" x="50%" y="475"/>
				<normal font="Lucida Grande 10 Bold" color="#ffffff"/>
				<text></text>
			</item>


			<!-- button container -->
			<item type="rect">
				<pos x="50%" y="420" anchor="s" width="box" height="box"/>

				<box orientation="horizontal" spacing="10">
	
					<!-- session button -->
					<item type="rect" id="session_button" button="true">
						<pos anchor="nw" width="70" height="60"/>
						
						<box orientation="vertical" spacing="5">
		
							<!-- button image -->
							<item type="pixmap">
								<normal file="btn3.png"/>
								<active file="btn3_pressed.png"/>
								<pos x="50%" anchor="n"/>
							</item>

							<!-- button text-label -->
							<item type="label">
								<pos x="50%" anchor="n"/>
								<normal font="Lucida Grande 9" color="#ffffff"/>
								<stock type="session"/>
							</item>
						</box>
					</item>


					<!-- reboot button -->
					<item type="rect" id="reboot_button" button="true">
						<pos anchor="nw" width="70" height="60"/>
						
						<box orientation="vertical" spacing="5">
		
							<!-- button image -->
							<item type="pixmap">
								<normal file="btn2.png"/>
								<active file="btn2_pressed.png"/>
								<pos x="50%" anchor="n"/>
							</item>

							<!-- button text-label -->
							<item type="label">
								<pos x="50%" anchor="n"/>
								<normal font="Lucida Grande 9" color="#ffffff"/>
								<stock type="reboot"/>
							</item>
						</box>
					</item>


					<!-- halt button -->
					<item type="rect" id="halt_button" button="true">
						<pos anchor="nw" width="70" height="60"/>
						
						<box orientation="vertical" spacing="5">
		
							<!-- button image -->
							<item type="pixmap">
								<normal file="btn1.png"/>
								<active file="btn1_pressed.png"/>
								<pos x="50%" anchor="n"/>
							</item>

							<!-- button text-label -->
							<item type="label">
								<pos x="50%" anchor="n"/>
								<normal font="Lucida Grande 9" color="#ffffff"/>
								<stock type="halt"/>
							</item>
						</box>
					</item>
				</box>
			</item> 
		</fixed>
	</item>
</greeter>
